<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Hi sir, welcome to the app.\nTake care and wear a mask."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/sensorValues"
        android:layout_width="248dp"
        android:layout_height="120dp"
        android:layout_below="@id/welcomeText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="96dp"
        android:text="CO2: -- PPM\nNO2: -- PPM\nCO: -- PPM\nTemperature: --Â°C\nHumidity: --%"
        android:textSize="20sp" />

    <Button
        android:id="@+id/historyButton"
        android:layout_width="126dp"
        android:layout_height="59dp"
        android:layout_below="@id/sensorValues"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="137dp"
        android:text="History" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="251dp"
        android:layout_height="173dp"
        android:layout_above="@+id/welcomeText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="52dp"
        app:srcCompat="@drawable/boy" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="358dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="FINAL YEAR PROJECT CEC"
        android:textSize="28sp"
        android:textStyle="bold" />
</RelativeLayout>
